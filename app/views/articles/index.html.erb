<h1> The Viking Times </h1>

<%= link_to 'All', articles_path %>

<% @categories.each do |category| %>
    <%= link_to category.name, articles_path(params: {category: category.name}) %>
<% end %>

<% @articles.each do |article| %>
    <p>
    <%= link_to article_path(article) do %>
        <%= article.title %>
        <%= article.lead %>
    <% end %>
    </p>
<% end %>