 <% if user_signed_in? %>
  <%= link_to t('signout'), destroy_user_session_path, method: :delete, class: "signout_button" %>
<% else %>
  <%= link_to t('login'), new_user_session_path, method: :new, class: "login_button" %>
<% end %>

<div class="border-b-2 mb-4">
  <h1> The Viking Times </h1>
</div>
<div class="flex justify-center pt-2 pb-2">
  <ul class="list-reset flex">
    <li class="mx-2">
      <%= link_to 'All', articles_path, class: "categories" %>
    </li>
    <% @categories.each do |category| %>
      <li class="mx-2">
         <%= link_to category.name, articles_path(params: {category: category.name}), class: "categories"%>
      </li>
    <% end %>
  </ul>
</div>
<div class="article-grid">
  <% @articles.each do |article|%>
    <div id="<%= dom_id(article) %>">
      <%=  link_to(article_path(article)) do %>
        <div class="max-w-sm rounded overflow-hidden shadow-lg">
          <div class="px-6 py-4">
            <div class="font-bold text-xl mb-2">
              <%= article.title %>
            </div>
            <p class="text-grey-darker text-base">
              <%= article.lead %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
