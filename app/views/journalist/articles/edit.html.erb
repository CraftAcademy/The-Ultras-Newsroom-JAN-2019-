<h1>Edit article</h1>
 
<%= form_with model: @article, url: journalist_article_path(@article), local: true do |form| %>
    <p>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
    </p>
 
    <p>
        <%= form.label :lead %><br>
        <%= form.text_area :lead %>
    </p>

    <p>
        <%= form.label :content %><br>
        <%= form.text_area :content %>
    </p>
 
    <p>
        <%= form.submit %>
    </p>

    <p>
        <%= form.file_field :image %>
    </p>
    <p> 
        <%= link_to 'Delete', 
            journalist_article_path(@article), 
                method: :delete,
                data: { confirm: 'Are you sure?' } 
        %>     
    </p> 

    <% if @article.image.attached? == true %>
    <p> 
        <%= link_to 'Delete Image', 
            journalist_article_path(@article, deleteimage: true), 
                method: :delete,
                data: { confirm: 'Are you sure?' }
        %>     
    </p>   
    <% else %>
        <% false %>
    <% end %>  
    
<% end %>
 
<%= link_to 'Back', :back %>
